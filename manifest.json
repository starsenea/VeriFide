{
    "manifest_version": 3,
    "name": "Google Docs Text Enhancer",
    "description": "A Chrome extension to read, write, and highlight text in Google Docs.",
    "version": "1.0",
    "permissions": [
      "identity",
      "scripting",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://docs.google.com/*"
    ],
    "oauth2": {
      "client_id": "716615658241-85ij2sjt3dssorubc8kk6lhf8lg6j9u4.apps.googleusercontent.com",
      "scopes": ["https://www.googleapis.com/auth/documents"]
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://docs.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }