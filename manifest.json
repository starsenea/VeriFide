{
  "manifest_version": 3,
  "name": "VeriFide",
  "version": "1.0",
  "description": "AI-powered fact checking for Google Docs",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "identity",
    "ai",
    "action",
    "storage"
  ],
  "oauth2": {
    "client_id": "716615658241-o7irnm8bk7b7kl8hfeevm494dqminpmn.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/documents.readonly"
    ]
  },
  "host_permissions": [
    "https://docs.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "32": "images/VF32.png",
      "48": "images/VF48.png",
      "64": "images/VF64.png",
      "128": "images/VF128.png"
    }
  },
  "chrome_settings_overrides": {
    "homepage": "chrome://newtab"
  },
  "chrome_ui_overrides": {
    "bookmarks_ui": {
      "remove_bookmark_shortcut": true,
      "remove_button": true
    }
  },
  "icons": {
    "32": "images/VF32.png",
    "48": "images/VF48.png",
    "64": "images/VF64.png",
    "128": "images/VF128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}